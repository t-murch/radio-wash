# RadioWash Environment Variables
# Copy this file to .env.local and fill in your values

# ===================
# Next.js Configuration
# ===================

# API Configuration
NEXT_PUBLIC_API_URL=http://127.0.0.1:5159
NEXT_PUBLIC_WEB_URL=http://localhost:3000
API_BASE_URL=http://127.0.0.1:5159/api

# ===================
# Supabase Configuration
# ===================

NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ===================
# Stripe Configuration
# ===================

NEXT_PUBLIC_STRIPE_PRICE_ID_MONTHLY=your_stripe_price_id

# ===================
# Analytics Configuration
# ===================

# Enable/disable Plausible Analytics (set to "true" to enable)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Your domain name for Plausible Analytics tracking
# Example: radiowash.com
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your_domain.com

# ===================
# Sentry Configuration
# ===================

NEXT_PUBLIC_SENTRY_AUTH_TOKEN=your_sentry_auth_token
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_DSN=your_sentry_dsn

# ===================
# Development Notes
# ===================
#
# 1. Never commit actual .env files with secrets to version control
# 2. Keep .env.local and .env in .gitignore
# 3. Update this .env.example file when adding new environment variables
# 4. For production, set these variables in your hosting platform's environment settings
